{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .greendot {
            height: 20px;
            width: 20px;
            background-color: #6abb54;
            border-radius: 50%;
            display: inline-block;
        }
         .reddot {
             height: 20px;
             width: 20px;
             background-color: #bc464d;
             border-radius: 50%;
             display: inline-block;
         }
    </style>
{% endblock %}
{% block body %}

    <h1>Utilisateurs à importer</h1>

    <form method="GET" action="{{ path('users_valid_import') }}?filename={{ filename }}">
        <button type="submit">Valider l'importation</button>
    </form>
    <table class="table table-striped  table-bordered">
        <thead>
        <tr>
            <th scope="col">Pseudo</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Téléphone</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Administrateur</th>
            <th scope="col">Actif</th>
            {#            <th scope="col">Compte administrateur</th>#}
        </tr>
        </thead>
        <tbody>
        {% for user in listeUsers %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.telephone }}</td>
                <td>{% if user.administrateur == 1 %}
                        <span class="greendot"></span>
                    {% else %}
                        <span class="reddot"></span>
                        {% endif %}</td>
                <td>{% if user.actif == 1 %}
                        <span class="greendot"></span>
                    {% else %}
                        <span class="reddot"></span>
                    {% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}

{% endblock %}
